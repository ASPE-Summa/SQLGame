<Window x:Class="SummaSQLGame.Dialog.ResetDatabaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database resetten" Height="180" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Weet je zeker dat je de database wilt resetten naar de standaardwaarden? Alle voortgang wordt verwijderd." TextWrapping="Wrap" Margin="0,0,0,20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuleren" Width="100" Margin="0,0,10,0" IsCancel="True"/>
            <Button Content="Resetten" Width="100" IsDefault="True" Click="Button_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
